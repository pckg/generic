<div class="pckg-generic-content-simple">
    <div class="row {{ action.getSetting('noPadding') ? 'row-no-padding' : '' }}">
        {% if action.getSetting('picture') and action.getSetting('picturePosition') == 'left' %}
            <div class="{{ action.getSetting('pictureWidth') }} {{ action.getSetting('pictureOffset') }}">
                <img src="{{ content.picture }}" class="img-responsive"/>
            </div>
        {% endif %}
        {% if action.getSetting('content', true) %}
            <div class="bind-content {{ action.getSetting('contentWidth', 'col-xs-12') ?? 'col-xs-12' }} {{ action.getSetting('contentOffset', '') }}">
                {{ content.content | raw }}
            </div>
        {% endif %}
        {% if action.getSetting('picture') and action.getSetting('picturePosition') == 'right' %}
            <div class="{{ action.getSetting('pictureWidth') }} {{ action.getSetting('pictureOffset') }}">
                <img src="{{ content.picture }}" class="img-responsive"/>
            </div>
        {% endif %}
    </div>
</div>