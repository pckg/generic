    {% if _env.isDev() %}
    Vue.config.debug = true;
    Vue.config.silent = false;
    Vue.config.devtools = true;
    Vue.config.performance = true;
    {% endif %}

    if (typeof moment !== 'undefined') {
        moment.locale(Pckg.config.locale.current);
    }

</script>

