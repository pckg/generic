<div class="form-horizontal">
    <div class="form-group">
        <label class="col-md-3">Background color</label>
        <div class="col-md-9">
            <input type="text" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3">Background image</label>
        <div class="col-md-9">
            <input type="text" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3">Background size</label>
        <div class="col-md-9">
            <select class="form-control" v-model="action.pivot.container"
                    @change="saveActionsMorph(action.pivot)">
                <option>contain</option>
                <option>cover</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3">Background repeat</label>
        <div class="col-md-9">
            <select class="form-control" v-model="action.pivot.container"
                    @change="saveActionsMorph(action.pivot)">
                <option>no-repeat</option>
                <option>repeat</option>
                <option>repeat-x</option>
                <option>repeat-y</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3">Background position</label>
        <div class="col-md-9">
            <select class="form-control" v-model="action.pivot.container"
                    @change="saveActionsMorph(action.pivot)">
                <option>center center</option>
                <option>center top</option>
                <option>center bottom</option>
                <option>left center</option>
                <option>left top</option>
                <option>left bottom</option>
                <option>right center</option>
                <option>right top</option>
                <option>right bottom</option>
            </select>
        </div>
    </div>
</div>