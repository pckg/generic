<td class="visible">
    <input type="checkbox" value="1" v-model="{{ type }}.visible"/>
</td>
<td class="position" style="display: none;">
    {% if type == 'field' %}
        <input type="number" class="form-control narrow" v-model="field.order"/>
    {% endif %}
</td>
<td class="field">
    <nobr>${ {{ type }}.title }</nobr>
</td>
<td class="filter {{ type }}" :class="['field-' + {{ type }}.id]" style="min-width: 360px;">
    <div class="form-group">
        {% if type == 'field' %}
            <div class="col-sm-4 filter-method">
                <select v-model="field.filterMethod" class="form-control">
                    <option></option>
                    <option v-for="(option,key) in filterMethods" :value="key">${ option.label }</option>
                </select>
            </div>
            <div class="col-sm-8 filter-value" v-if="field.filterMethod">
                <template
                        v-if="field.type == 'select' && ['equals', 'not', 'in', 'notIn'].indexOf(field.filterMethod) > -1">
                    <select v-model="field.filterValue" class="form-control"
                            :multiple="['in', 'notIn'].indexOf(field.filterMethod) > -1 ? 'multiple' : null">
                        <option v-for="(option,key) in field.options"
                                :value="key">${ option }
                        </option>
                    </select>
                </template>
                <template v-else-if="['isNull', 'notNull'].indexOf(field.filterMethod) == -1">
                    <input type="text" v-model="field.filterValue" class="form-control"/>
                </template>
            </div>
        {% else %}
            {# belongs to #}
            <div class="col-sm-4 filter-field">
                <select v-model="relation.filterField" class="form-control">
                    <option></option>
                    <option v-for="option in relation.fields" :value="option.id">${ option.title }</option>
                </select>
            </div>
            <template v-if="relationFilterSelectField(relation)">
                <div class="col-sm-4 filter-subfield">
                    <select v-model="relation.filterSubField" class="form-control">
                        <option></option>
                        <option v-for="option in relationFilterSelectField(relation).fields" :value="option.id">${ option.title }</option>
                    </select>
                </div>
            </template>
            <div class="col-sm-4">
                <select v-model="relation.filterMethod" class="form-control">
                    <option></option>
                    <option v-for="(option,key) in filterMethods" :value="key">${ option.label }</option>
                </select>
            </div>
            <template v-if="relation.filterMethod">
                <div v-if="relation.filterField || ['greater', 'greaterOrEquals', 'lower', 'lowerOrEquals', 'like'].indexOf(relation.filterMethod) > -1"
                     class="col-sm-4">
                    <input type="text" v-model="relation.filterValue" class="form-control"/>
                </div>
                <div v-else class="col-sm-4">
                    <select v-model="relation.filterValue" class="form-control"
                            :multiple="['in', 'notIn'].indexOf(relation.filterMethod) > -1 ? 'multiple' : null">
                        <option v-for="(option,key) in relation.filterOptions" :value="key">${ option }
                        </option>
                    </select>
                </div>
            </template>
        {% endif %}
    </div>
</td>
<td class="group" style="display: none;">
    {% if type == 'field' %}
        <div class="form-group">
            <input type="checkbox" v-model="field.group" value="1"/>
        </div>
    {% endif %}
</td>
<td class="sort">
    {% if type == 'field' %}
        <div class="form-group">
            <select v-model="field.sort" class="form-control">
                <option></option>
                <option v-for="(option,key) in directions" :value="key">${ option.label }</option>
            </select>
        </div>
    {% endif %}
</td>