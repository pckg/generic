<script type="text/x-template" id="pckg-chart">
    <canvas class="pckg-chart" id="pckg-chart-1" width="3" height="1"></canvas>
</script>

<script>
    Vue.component('pckg-chart', {
        mixins: [pckgDelimiters],
        template: '#pckg-chart',
        props: {
            data: null,
            type: null,
            scale: {
                type: String,
                default: 'linear'
            }
        },
        data: function () {
            return {
                _chart: {}
            };
        },
        methods: {
            initChart: function () {
                if (this._chart) {
                    this._chart.destroy();
                }

                this._chart = new Chart($(this.$el).get()[0], {
                    type: this.type,
                    data: this.data,
                    options: {
                        hover: {
                            mode: 'x-axis'
                        },
                        tooltips: {
                            mode: 'x-axis'
                        },
                        scales: {
                            yAxes: [{
                                type: this.scale
                            }]
                        }
                    }
                });
            }
        },
        watch: {
            data: function () {
                this.initChart();
            },
            scale: function () {
                this.initChart();
            }
        },
        mounted: function () {
            this.$nextTick(this.initChart);
        }
    });
</script>